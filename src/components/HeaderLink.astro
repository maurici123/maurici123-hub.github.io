---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const base = import.meta.env.BASE_URL ?? '/';

// Asegurar que base termine con /
const normalizedBase = base.endsWith('/') ? base : base + '/';

const pathname = Astro.url.pathname.replace(normalizedBase, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '');

// Construir el href con el base path correctamente
// Para "/" usamos el base, para otras rutas agregamos base + ruta sin / inicial
const computedHref = href === '/' 
  ? normalizedBase 
  : normalizedBase + href.replace(/^\//, '');
---

<a href={computedHref} class:list={[className, { active: isActive }]} {...props}>
  <slot />
</a>
<style>
  a {
    display: inline-block;
    text-decoration: none;
  }
  a.active {
    font-weight: bolder;
    text-decoration: underline;
  }
</style>
